{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    //"module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
    //"target": "es2015",
    //"inlineSourceMap": true
  },
  "include": [
    "src/**/*.ts"
    //"src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
